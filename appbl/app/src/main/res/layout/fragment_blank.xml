<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todoListRecyclerView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="58dp"
        android:backgroundTint="?android:attr/textColorPrimaryNoDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView1" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/newTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purple_500"
        android:padding="5dp"
        android:text=""
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        app:icon="@drawable/baseline_add_24"
        app:iconTint="?android:attr/textColorPrimaryNoDisable"
        app:layout_constraintBottom_toBottomOf="@+id/todoListRecyclerView1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tekstik"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Список без названия"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?attr/actionBarItemBackground"
        android:backgroundTint="?android:attr/textColorPrimaryNoDisable"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minHeight="56dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?android:attr/textColorPrimaryNoDisable"
        tools:ignore="MissingClass,MissingConstraints,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?attr/actionBarItemBackground"
        android:backgroundTint="?android:attr/textColorPrimaryNoDisable"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minHeight="56dp"
        android:src="@drawable/baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?android:attr/textColorPrimaryNoDisable"
        tools:ignore="SpeakableTextPresentCheck" />


    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#424242"
        app:layout_constraintTop_toBottomOf="@+id/tekstik"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,UnknownId"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>