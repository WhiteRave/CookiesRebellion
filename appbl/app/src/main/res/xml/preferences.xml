<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="theme_category"
        android:title="Тема">
        <ListPreference
            app:defaultValue="follow_system"
            app:dialogIcon="@drawable/baseline_nightlight_24"
            app:entries="@array/theme_options"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/baseline_mode_night_24"
            app:key="theme"
            android:negativeButtonText="Отмена"
            app:summary="Выберите тему приложения"
            app:title="Тема" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notifications_category"
        android:title="Уведомления">
        <SwitchPreference
            app:entries="@array/theme_options"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/baseline_notifications_24"
            app:key="enable_notifications"
            app:summaryOff="Уведомления выключены"
            app:summaryOn="Уведомления включены"
            app:title="Уведомления" />
        <SwitchPreference
            android:key="reminder_switch"
            android:title="Мотивация"
            android:summaryOn="Мотивация включена"
            android:summaryOff="Мотивация выключена"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="reminder_switch1"
            android:title="Включить напоминания"
            android:summaryOn="Напоминания включены"
            android:summaryOff="Напоминания выключены"
            android:defaultValue="false"/>
    </PreferenceCategory>


</androidx.preference.PreferenceScreen>

